@model BookStore.Models.Author

@{
    ViewBag.Title = "Details about the Author";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AuthorFirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AuthorFirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AuthorLastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AuthorLastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AuthorBirthYear)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AuthorBirthYear)
        </dd>

    </dl>
</div>
<div id="checkBoxForList">
    @Html.Label("Please tick if you want to view related books!")

    @Html.CheckBox("BookList", false, new { name = "optradio" })
</div>
<div id= "ListOfRelatedBooks" hidden="hidden">
    @{
        Html.RenderPartial("_BooksForAuthor", Model.Books);
    }
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AuthorID }, new { @class = "btn btn-info" }) 
    @Html.ActionLink("Back to Homepage", "Index", null, new { @class = "btn btn-info"} )
</p>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script>
    $('#BookList').click(function () {
        var output = $('#BookList').is(':checked');
        if (output) {
            $('#ListOfRelatedBooks').css('display', 'block');
        } else {
            $('#ListOfRelatedBooks').css('display', 'none');
        }
        }
    )
</script>